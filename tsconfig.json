{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "supertest"]
  },
  "include": ["src", "src/test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
